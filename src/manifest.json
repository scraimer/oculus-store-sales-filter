{
   "name": "Filter of Oculus Store items",
   "version": "0.0.3",
   "manifest_version" : 2,

   "description": "Hides items you've already purchased, or just items you don't want to see.",
   "icons": {
      "128": "icon-128x128.png",
      "48": "icon-48x48.png",
      "16": "icon-16x16.png"
   },

   "page_action": {},

   "permissions": [ 
      "https://www.oculus.com/experiences/rift/section/1578364258944223/*",
		"https://www.oculus.com/experiences/rift/*",
      "tabs",
		"storage" 
   ],
   "content_scripts": [
      {
         "matches": ["https://www.oculus.com/experiences/rift/section/1578364258944223/*"],
         "js": [
            "jquery-1.8.2.js",
            "hide-items-content-script.js"
         ],
         "run_at": "document_start"
      },
		{
         "matches": ["https://www.oculus.com/experiences/rift/*"],
         "js": [
            "jquery-1.8.2.js",
            "add-items-to-blacklist-content-script.js"
         ],
         "run_at": "document_start"
      }
   ]
}
